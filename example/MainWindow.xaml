<Window x:Class="elp.Yandex.Translate.example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Name="inputTextBox" AcceptsReturn="True" Height="53" Margin="10,51,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Name="translateButton" Content="Translate" HorizontalAlignment="Left" Margin="10,109,0,0" VerticalAlignment="Top" Width="75" Click="translateButton_Click"/>
        <TextBox Name="outputTextBox" AcceptsReturn="True" Height="60" Margin="10,136,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ComboBox Name="firstLangComboBox" ItemsSource="{Binding}" DisplayMemberPath="value"  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="firstLangComboBox_SelectionChanged"/>
        <ComboBox Name="secondLangComboBox" ItemsSource="{Binding}" DisplayMemberPath="value" HorizontalAlignment="Left" Margin="387,10,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
